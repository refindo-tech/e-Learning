<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fredoka_medium"
        android:text="@string/hint_welcome"
        android:textSize="16sp"
        android:paddingStart="26sp"
        android:layout_marginTop="32dp"
        android:textColor="@color/accent1"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogin"
        style="@style/Theme.IniDesakuBeta.Button."
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/login_as_teacher"
        android:textAllCaps="false"
        app:cornerRadius="5dp"
        android:backgroundTint="@color/primary3"
        app:strokeColor="@color/light3"
        app:strokeWidth="1dp"
        android:textColor="@color/accent1"
        android:textStyle="bold"
        android:layout_marginTop="14dp"
        android:layout_marginHorizontal="24dp"/>

    <LinearLayout
        android:id="@+id/layoutGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center|center_horizontal"
        android:orientation="horizontal"
        android:layout_marginHorizontal="24dp">

        <View
            android:id="@+id/line1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="2"
            android:background="@color/font200"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvOr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/atau"
            android:fontFamily="@font/fredoka_regular"
            android:textColor="@color/light4"
            android:textSize="16sp"
            android:textAlignment="center" />

        <View
            android:id="@+id/line2"
            android:layout_width="0dp"
            android:layout_height="1.5dp"
            android:layout_weight="2"
            android:background="@color/font200"
            android:visibility="visible" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGuest"
        style="@style/Theme.IniDesakuBeta.Button."
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/login_as_student"
        android:textAllCaps="false"
        app:cornerRadius="5dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/primary3"
        app:strokeColor="@color/light3"
        app:strokeWidth="1dp"
        android:textColor="@color/accent1"
        android:textStyle="bold"
        android:layout_marginHorizontal="24dp"/>

</LinearLayout>