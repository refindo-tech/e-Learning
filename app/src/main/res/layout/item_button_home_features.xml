<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_marginBottom="4dp"
    android:layout_centerVertical="true">

    <androidx.cardview.widget.CardView
        android:id="@+id/btnCore"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="45dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btnSrcCore"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:shapeAppearanceOverlay="@style/customImageViewCircle"
            android:src="@drawable/ic_book"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            />

    </androidx.cardview.widget.CardView>



    <TextView
        android:id="@+id/tvButtonCore"
        style="@style/Theme.IniDesakuBeta.Text.Subtitle1"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="@string/dummy_button_features"/>

</androidx.appcompat.widget.LinearLayoutCompat>